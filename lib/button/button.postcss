.one-button {
  display: inline-block;
  border: var(--one-border-width-small) solid transparent;
  background-color: transparent;
  padding: var(--one-space-half) var(--one-space-one);
  margin: var(--one-space-half);
  cursor: pointer;
  border-radius: var(--one-border-radius-small, 2pt);
  user-select: none;
  outline: 0;
  &:focus {
    outline: 0;
  }
  &--rounded {
    border-radius: var(--one-border-radius-extralarge, 6pt);
  }
  &--squared {
    border-radius: 0;
  }
  &--pill {
    border-radius: 999em;
  }
  /* Basic variants */
  @each $variant in primary, secondary, success, danger, warning, info {
    &--$(variant) {
      border-color:  var(--one-state-$(variant)-border-color, var(--one-state-$(variant)-color));
      background-color: var(--one-state-$(variant)-color);
      color: var(--one-state-$(variant)-font-color);

      &:focus {
        box-shadow: 0 0 0 3pt var(--one-state-$(variant)-outline-color);
      }
    }
  }
  /* Outline variants */
  @each $variant in primary, secondary, success, danger, warning, info {
    &--outline-$(variant) {
      background-color: transparent;
      color: var(--one-state-$(variant)-color);
      border-color: var(--one-state-$(variant)-color);

      &:focus {
        box-shadow: 0 0 0 3pt var(--one-state-$(variant)-outline-color);
      }
    }
  }
}
