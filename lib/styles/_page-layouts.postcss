.page-grid {
  display: grid;
  height: 100%;
  width: 100%;
  grid-template-columns: auto 1fr auto;
  grid-template-rows: auto 1fr auto;
  grid-template-areas:
    "sidebar header toolbar"
    "sidebar content toolbar"
    "sidebar footer toolbar";
  &--scrollauto {
    overflow: auto;
  }
  &__sidebar {
    grid-area: sidebar;
  }
  &__toolbar {
    grid-area: toolbar;
  }
  &__header {
    grid-area: header;
  }
  &__content {
    grid-area: content;
  }
  &__footer {
    grid-area: footer;
  }
}
