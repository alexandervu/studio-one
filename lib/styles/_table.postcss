.one-table {
  width: 100%;
  max-width: 100%;
  margin: 3rem 0;
  border-collapse: collapse;
  border-spacing: 0;
  
  th, td {
    text-align: left;
    padding: .5em .5em .5em 1em;
    color: var(--color-cool-grey-500);
  }

  th {
    font-weight: normal;
    color: var(--color-cool-grey-500);
    background-color: var(--color-cool-grey-100);
  }

  td {
    text-align: left;
    border-bottom: 2px solid var(--color-cool-grey-100);
    white-space: nowrap;
  }
}
